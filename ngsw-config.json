{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/**/*.css",
          "/**/*.js",
          "/**/*.html"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "prefetch",
      "updateMode": "prefetch",
      "resources": {
        "files": ["/assets/**/*"]
      }
    }
  ],
  "dataGroups": [
    {
      "cacheConfig": {
        "maxAge": "7d",
        "maxSize": 300,
        "strategy": "performance"
      },
      "name": "firestore",
      "urls": [
        "https://firebasestorage.googleapis.com/v0/b/jlz-portfolio.appspot.com/o/**/*.(svg|cur|jpg|jpeg|png|apng|webp|avif|gif|otf|ttf|woff|woff2|mp4)"
      ]
    },
    {
      "cacheConfig": {
        "maxAge": "3d",
        "maxSize": 500,
        "strategy": "performance"
      },
      "name": "linkpreview",
      "urls": [
        "https://api.linkpreview.net/**/*",
        "https://us-central1-jlz-portfolio.cloudfunctions.net/jzPortfolioApp/api/v3/posts/*"
      ]
    }
  ]
}
