{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "lib": ["ESNext", "dom"]
  },
  "compileOnSave": true,
  "include": ["src"]
}
