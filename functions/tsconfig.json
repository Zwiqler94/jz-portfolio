{
  "compilerOptions": {
    "module": "CommonJS",
    "incremental": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["node"]
  },
  "compileOnSave": true,
  "include": ["src", "../pg-test.js", "pg-test.js"]
}
